{{#if (or (equals user.role "admin") (equals user.role "premium"))}}
    <div>
        <a href="/products">
            <h3>PRODUCTOS</h3>
        </a>
        <a href="/addProduct">
            <h3>
                Agregar un producto...
            </h3>
        </a>
    </div>
